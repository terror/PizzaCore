@model IdentityUser

@{
  ViewData["Title"] = "Management - Terminate Employee";
}

<h1>Terminate Employee</h1>
<h3>Are you sure you want to terminate this employee?</h3>
<div>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.UserName)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.UserName)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Email)
    </dd>

    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.EmailConfirmed)
    </dt>
    <dd class="col-sm-10">
      @if (Model.EmailConfirmed) { <p>Yes</p> } else { <p>No</p> }
    </dd>
  </dl>

  <form asp-action="Delete">
    <input type="submit" value="Terminate" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
  </form>
</div>
