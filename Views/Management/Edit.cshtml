@model PizzaCore.Models.ManagementModel

@{
  ViewData["Title"] = "Management - Re-assign Employee";
}

<h1>Re-assign Employee</h1>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <select asp-for="Role" class="form-control">
          <option disabled selected>Select employee role</option>
          <option value="Owner">Owner</option>
          <option value="Manager">Manager</option>
          <option value="Cook">Cook</option>
          <option value="Delivery">Delivery Person</option>
          <option value="Service">Front-service worker</option>
        </select>
      </div>
      <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
